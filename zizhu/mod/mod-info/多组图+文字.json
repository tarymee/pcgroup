<li class="m-lunbo-wrap" data-type="lunbo" style="color:{{textColor.con}};"><div class="m-bg">{{if bg.con}}<img src="{{bg.con}}" />{{/if}}<div class="m-bg-cover-color"></div>{{if bgOpacity.con}}<div class="m-bg-item-color" style="{{if bgColor.con}}background-color:{{bgColor.con}};{{/if}}opacity:{{bgOpacity.con/100}};"></div>{{/if}}</div><div class="m-valign"><div class="m-lunbo m-valign-item"><ul>{{each sliderPic.con as value i}}<li><img src="{{value.picUrl}}" /><div class="m-lunbo-des">{{value.textContent}}</div></li>{{/each}}</ul><div class="m-lunbo-nav"></div></div></div><div class="m-next"></div></li>



